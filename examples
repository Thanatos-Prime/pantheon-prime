from pantheon.hound.reflex_filter import ReflexFilter
from pantheon.mirror.invariant_engine import InvariantEngine
from pantheon.governance.decision_protocol import DecisionProtocol

text = "We should explore this opportunity carefully."

hound = ReflexFilter()
mirror = InvariantEngine()
gate = DecisionProtocol()

flags = hound.flag(text)
inv = mirror.extract(text)
decision = gate.evaluate(solomon=0.82, coil=0.75)

print("Reflex:", flags)
print("Invariant:", inv)
print("Decision:", decision)