Minimal Golden Manifest Creation

def create_golden_manifest(model_id, model_path, model_obj, creator):
    arch_hash = compute_arch_hash(model_obj)
    param_hash = compute_param_hash(Path(model_path))

    manifest = {
        "model_id": model_id,
        "name": model_obj.name,
        "owner": creator,
        "version": model_obj.version,
        "path": model_path,
        "format": model_obj.format,
        "arch_hash": arch_hash,
        "param_hash": param_hash,
        "created_at": now_iso(),
        "created_by": creator,
        "status": "ACTIVE",
        "last_verified_at": None,
        "last_verified_by": None,
        "signatures": [],
        "notes": None
    }

    return manifest


