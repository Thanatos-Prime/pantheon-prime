  "arch_hash": "4cd18729cdd55a7ab80e6b72a1fb19c5f388ac7d8d5e4f992a34af2fa32d245e",
  "param_hash": "8db553e4da48db61e9d14026938e2a5fe15a0d6db5e1ef825712cbabee838aca",
  "created_at": "2025-11-28T13:12:44Z",
  "created_by": "Operator_MotherDuck",
  "status": "ACTIVE",
  "last_verified_at": null,
  "last_verified_by": null,
  "notes": "Golden manifest created at import."
}


