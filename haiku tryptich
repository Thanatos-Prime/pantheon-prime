<script>
  // Simple slider
  const scenes = [...document.querySelectorAll('.scene')];
  const dots = [...document.querySelectorAll('.dot')];
  let idx = 0;

  function go(i){
    idx = (i + scenes.length) % scenes.length;
    scenes.forEach((s,j)=>s.classList.toggle('active', j===idx));
    dots.forEach((d,j)=>d.classList.toggle('active', j===idx));
    // restart line animations when entering a scene
    const lines = scenes[idx].querySelectorAll('.haiku .l');
    lines.forEach(l => { l.style.animation = 'none'; l.offsetHeight; l.style.animation = ''; });
  }
  document.querySelectorAll('[data-next]').forEach(b=>b.addEventListener('click',()=>go(idx+1)));
  document.querySelectorAll('[data-prev]').forEach(b=>b.addEventListener('click',()=>go(idx-1)));
  dots.forEach((d,i)=>d.addEventListener('click',()=>go(i)));
  window.addEventListener('keydown',e=>{
    if(e.key==='ArrowRight') go(idx+1);
    if(e.key==='ArrowLeft')  go(idx-1);
  });

  // Scene 1: populate raindrops
  const win = document.getElementById('window');
  for(let i=0;i<70;i++){
    const d=document.createElement('div');
    d.className='raindrop';
    d.style.left=Math.random()*100+'%';
    d.style.animationDuration=(2+Math.random()*2.5)+'s';
    d.style.opacity = .35 + Math.random()*.55;
    win.appendChild(d);
  }

  // Scene 2: stars
  const stars = document.getElementById('stars');
  for(let i=0;i<140;i++){
    const s=document.createElement('div');
    s.className='star';
    s.style.left=Math.random()*100+'%';
    s.style.top=Math.random()*60+'%';
    s.style.animationDelay=(Math.random()*3)+'s';
    stars.appendChild(s);
  }

  // Scene 3: frost (snow streaks)
  const frost = document.getElementById('frost');
  for(let i=0;i<120;i++){
    const f=document.createElement('div');
    f.className='flake';
    f.style.left=Math.random()*100+'%';
    f.style.animationDelay=(Math.random()*6)+'s';
    f.style.opacity=.4+Math.random()*.6;
    frost.appendChild(f);
  }
</script>

