# ðŸ§  **2. src/sps/states.py**

```python
from enum import Enum, auto
from dataclasses import dataclass


class SPSState(Enum):
    IDLE = auto()
    SURGE_BUFFER = auto()
    DE_ESCALATING = auto()
    GROUNDED = auto()
    BLOCKED = auto()


@dataclass
class SPSOutput:
    state: SPSState
    message: str
    safe: bool = True


â¸»

âš¡ 3. surge_absorber.py

from .states import SPSState, SPSOutput


class SurgeAbsorber:
    """
    Captures sudden emotional/cognitive spikes.
    Buffers them so no immediate reaction occurs.
    """

    def process(self, input_signal: str):
        # Detect a surge heuristically (placeholder logic)
        if any(word in input_signal.lower() for word in [
            "panic", "angry", "fuck", "overwhelmed",
            "can't take", "breaking", "rage"
        ]):
            return SPSOutput(
                state=SPSState.SURGE_BUFFER,
                message="Surge detected â€” buffering.",
                safe=False,
            )
        return None


â¸»

ðŸŒ¬ï¸ 4. de_escalator.py

from .states import SPSState, SPSOutput


class DeEscalator:
    """
    Converts buffered surges into grounded output.
    Simulates breath pacing, tempo slowing, reframing.
    """

    def process(self, prior_state: SPSState):
        if prior_state == SPSState.SURGE_BUFFER:
            return SPSOutput(
                state=SPSState.DE_ESCALATING,
                message="De-escalating â€” breathe, slow tempo, anchor.",
                safe=False,
            )
        return None


