# pantheon/governance/decision_protocol.py

class DecisionProtocol:
    """
    Combined Solomonâ€“Coil gate.
    """

    def evaluate(self, solomon: float, coil: float) -> dict:
        allowed = solomon >= 0.7 and coil >= 0.7
        return {
            "allowed": allowed,
            "solomon_score": solomon,
            "coil_score": coil,
            "decision": "approved" if allowed else "denied"
        }