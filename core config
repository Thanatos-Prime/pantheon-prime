from dataclasses import dataclass

@dataclass
class MeshConfig:
    dim: int = 8          # dimension of Ï†_i vectors
    alpha: float = 0.1    # smoothness weight
    beta: float = 0.3     # resonance weight
    gamma: float = 0.2    # recurrence weight
    dt: float = 0.05      # time step
    noise_scale: float = 0.01
    steps: int = 1000
