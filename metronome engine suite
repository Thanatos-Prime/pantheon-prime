def test_zero_gate_blocks_actions():
    met = MetronomeEngine()
    zero_gate.close()

    assert met.window_is_open() is False

def test_tempo_adjusts_with_aion_state():
    met = MetronomeEngine()
    met.aion_state = "Prime"
    met.apply_aion_adjustments()
    assert met.tempo < 112


