# pantheon/spider/plan_builder.py

class PlanBuilder:
    """
    Builds safe, reversible multi-step plans.
    """

    def build(self, goal: str) -> dict:
        return {
            "goal": goal,
            "steps": [
                "Interpret goal",
                "Check safety",
                "Check invariants",
                "Propose actions"
            ]
        }