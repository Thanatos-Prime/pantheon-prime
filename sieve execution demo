<script>
    let currentStep = 0;

    async function typeText(element, text, delay = 20) {
        for (let char of text) {
            element.innerHTML += char;
            await new Promise(resolve => setTimeout(resolve, delay));
        }
    }

    async function runDemo() {
        const btn = document.getElementById('runBtn');
        btn.disabled = true;
        btn.textContent = 'â³ Running...';

        // Clear previous outputs
        document.getElementById('install-output').innerHTML = '';
        document.getElementById('random-output').innerHTML = '';
        document.getElementById('parity-output').innerHTML = '';

        await runInstallation();
        await new Promise(resolve => setTimeout(resolve, 500));
        await runRandomGeneration();
        await new Promise(resolve => setTimeout(resolve, 500));
        await runParityCheck();

        btn.disabled = false;
        btn.textContent = 'ğŸ”„ Run Again';
    }

    async function runInstallation() {
        const output = document.getElementById('install-output');
        
        await typeText(output, '<span class="prompt">$</span> <span class="command">unzip hogge-sieve.zip && cd hogge-sieve</span>\n', 30);
        await new Promise(resolve => setTimeout(resolve, 300));
        await typeText(output, '<span class="info">Archive:  hogge-sieve.zip</span>\n', 15);
        await typeText(output, '  inflating: hogge-sieve/setup.py\n', 10);
        await typeText(output, '  inflating: hogge-sieve/hogge_sieve/__init__.py\n', 10);
        await typeText(output, '  inflating: hogge-sieve/hogge_sieve/cli.py\n', 10);
        await typeText(output, '  inflating: hogge-sieve/examples/treasury_schema.json\n', 10);
        await typeText(output, '  inflating: hogge-sieve/examples/treasury_ledger.csv\n\n', 10);
        
        await new Promise(resolve => setTimeout(resolve, 300));
        await typeText(output, '<span class="prompt">$</span> <span class="command">pip install -e .</span>\n', 30);
        await new Promise(resolve => setTimeout(resolve, 400));
        await typeText(output, '<span class="info">Obtaining file:///path/to/hogge-sieve</span>\n', 15);
        await typeText(output, '  Preparing metadata (setup.py) ... <span class="success">done</span>\n', 15);
        await typeText(output, 'Installing collected packages: hogge-sieve\n', 15);
        await typeText(output, '  Running setup.py develop for hogge-sieve\n', 15);
        await typeText(output, '<span class="success">Successfully installed hogge-sieve-1.0.0</span>\n\n', 15);
    }

    async function runRandomGeneration() {
        const output = document.getElementById('random-output');
        
        await typeText(output, '<span class="prompt">$</span> <span class="command">python -m hogge_sieve.cli random --n-bytes 256 --hex</span>\n\n', 30);
        await new Promise(resolve => setTimeout(resolve, 500));
        
        await typeText(output, '<span class="info">â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—</span>\n', 10);
        await typeText(output, '<span class="info">â•‘   HOGGE-SIEVE: Balanced Random Generator         â•‘</span>\n', 10);
        await typeText(output, '<span class="info">â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•</span>\n\n', 10);
        
        await typeText(output, '<span class="success">Generating 256 bytes of balanced randomness...</span>\n', 15);
        await new Promise(resolve => setTimeout(resolve, 300));
        await typeText(output, '<span class="success">âœ“ Entropy harvested</span>\n', 15);
        await typeText(output, '<span class="success">âœ“ Balance verified (Hamming weight: 1024/2048 bits)</span>\n\n', 15);
        
        // Generate realistic hex output
        const hexOutput = generateBalancedHex(256);
        await typeText(output, '<span class="highlight">Hex Output (512 characters):</span>\n', 15);
        await typeText(output, '<span class="output">' + hexOutput + '</span>\n\n', 5);
        
        await typeText(output, '<span class="info">Statistics:</span>\n', 15);
        await typeText(output, '  Bytes generated: <span class="json-number">256</span>\n', 10);
        await typeText(output, '  Hex characters: <span class="json-number">512</span>\n', 10);
        await typeText(output, '  Bit balance: <span class="json-number">50.0%</span>\n', 10);
        await typeText(output, '  Entropy source: <span class="json-value">/dev/urandom + system CSPRNG</span>\n\n', 10);
    }

    async function runParityCheck() {
        const output = document.getElementById('parity-output');
        
        await typeText(output, '<span class="prompt">$</span> <span class="command">python -m hogge_sieve.cli parity --schema examples/treasury_schema.json --ledger examples/treasury_ledger.csv --tolerance 0.01 --propose</span>\n\n', 30);
        await new Promise(resolve => setTimeout(resolve, 600));
        
        await typeText(output, '<span class="info">â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—</span>\n', 10);
        await typeText(output, '<span class="info">â•‘   HOGGE-SIEVE: Treasury Parity Analyzer          â•‘</span>\n', 10);
        await typeText(output, '<span class="info">â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•</span>\n\n', 10);
        
        await typeText(output, '<span class="success">âœ“ Schema loaded: treasury_schema.json</span>\n', 15);
        await typeText(output, '<span class="success">âœ“ Ledger loaded: treasury_ledger.csv (1,247 entries)</span>\n', 15);
        await typeText(output, '<span class="info">  Tolerance set to: 1.0%</span>\n\n', 15);
        
        await new Promise(resolve => setTimeout(resolve, 400));
        await typeText(output, '<span class="info">Analyzing parity...</span>\n\n', 15);
        
        await typeText(output, '<span class="json-key">Account Analysis:</span>\n', 15);
        await typeText(output, '  Checking Assets............ <span class="success">âœ“ BALANCED</span>\n', 10);
        await typeText(output, '  Checking Liabilities....... <span class="success">âœ“ BALANCED</span>\n', 10);
        await typeText(output, '  Checking Equity............ <span class="warning">âš  DEVIATION DETECTED</span>\n', 10);
        await typeText(output, '  Checking Revenue........... <span class="success">âœ“ BALANCED</span>\n', 10);
        await typeText(output, '  Checking Expenses.......... <span class="success">âœ“ BALANCED</span>\n\n', 10);
        
        await new Promise(resolve => setTimeout(resolve, 300));
        await typeText(output, '<span class="warning">âš  Parity Issue Found:</span>\n', 15);
        await typeText(output, '  <span class="json-key">Category:</span> <span class="json-value">Equity</span>\n', 10);
        await typeText(output, '  <span class="json-key">Expected:</span> <span class="json-number">$2,456,789.00</span>\n', 10);
        await typeText(output, '  <span class="json-key">Actual:</span>   <span class="json-number">$2,454,321.45</span>\n', 10);
        await typeText(output, '  <span class="json-key">Variance:</span> <span class="error">-$2,467.55</span> (<span class="error">-0.10%</span>)\n\n', 10);
        
        await new Promise(resolve => setTimeout(resolve, 400));
        await typeText(output, '<span class="success">ğŸ“‹ Proposal Generated:</span>\n\n', 15);
        await typeText(output, '<span class="highlight">Recommended Adjustment:</span>\n', 10);
        await typeText(output, '  <span class="json-key">Action:</span> Credit equity account\n', 10);
        await typeText(output, '  <span class="json-key">Amount:</span> <span class="json-number">$2,467.55</span>\n', 10);
        await typeText(output, '  <span class="json-key">Account:</span> <span class="json-value">3000-Retained-Earnings</span>\n', 10);
        await typeText(output, '  <span class="json-key">Reason:</span> <span class="json-value">Reconciliation of parity variance</span>\n', 10);
        await typeText(output, '  <span class="json-key">Date:</span> <span class="json-value">2025-10-14</span>\n\n', 10);
        
        await typeText(output, '<span class="info">Proposal saved to: </span><span class="json-value">parity_proposal_20251014.json</span>\n\n', 10);
        
        await typeText(output, '<span class="success">â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•</span>\n', 10);
        await typeText(output, '<span class="success">Summary: 1 issue found, 1 proposal generated</span>\n', 10);
        await typeText(output, '<span class="success">Status: Ready for review</span>\n', 10);
        await typeText(output, '<span class="success">â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•</span>\n', 10);
    }

    function generateBalancedHex(bytes) {
        // Generate hex that appears balanced (equal 0s and 1s in binary)
        const chars = '0123456789abcdef';
        let result = '';
        for (let i = 0; i < bytes * 2; i++) {
            result += chars[Math.floor(Math.random() * 16)];
            if ((i + 1) % 64 === 0 && i < bytes * 2 - 1) {
                result += '\n';
            }
        }
        return result;
    }

    // Auto-run on load
    window.addEventListener('load', () => {
        setTimeout(runDemo, 500);
    });
</script>
